# ใช้ Go 1.23 (หรือเวอร์ชันล่าสุด)
FROM golang:1.23

# ติดตั้ง git และอัปเกรด Go Toolchain อัตโนมัติ
RUN apk add --no-cache git && export GOTOOLCHAIN=auto

# ติดตั้ง Air (hot reload)
RUN go install github.com/cosmtrek/air@latest

# ตั้งค่า Working Directory
WORKDIR /app

# คัดลอกโค้ดทั้งหมด
COPY . .

# โหลดค่า env (Docker Compose จะจัดการให้)
ENV PORT_API=:8080

# เปิดพอร์ต API
EXPOSE 8080

# ใช้ air reload สำหรับ Dev Mode
CMD ["air"]
